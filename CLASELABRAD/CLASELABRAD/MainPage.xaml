<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CLASELABRAD.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="BIENVENIDO!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
      

        <Entry x:Name="txtcodigo"  Placeholder="Ingrese Codigo"  Keyboard="Text"  />
       
        <Entry x:Name="txtnombres" Placeholder="Ingrese Nombre" Keyboard="Text"  />
        
        <Entry x:Name="txtapellidos" Placeholder="Ingrese Apellidos" Keyboard="Text"  />
        
        <Entry x:Name="txtelefono" Placeholder="Ingrese Celular" Keyboard="Numeric"  />
        
        <Entry x:Name="txtcorreo" Placeholder="Ingrese Email" Keyboard="Email"  />
        
        <Button x:Name="btnagregar" Text="SALVAR" Clicked="btnagregar_Clicked" />

        <Button x:Name="btnsegunda" Text="IR A PAGINA" Clicked="btnsegunda_Clicked" />



    </StackLayout>

</ContentPage>
