<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CLASELABRAD.Views.PageEmple">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <Entry x:Name="txtcodigo" Placeholder="Ingrese codigo" Keyboard="Text" />

                <Entry x:Name="txtnombres" Placeholder="Ingrese nombre" Keyboard="Text" />

                <Entry x:Name="txtapellidos" Placeholder="Ingrese apellidos" Keyboard="Text" />

                <Entry x:Name="txtelefono" Placeholder="Ingrese celular" Keyboard="Telephone" />

                <Entry x:Name="txtcorreo" Placeholder="Ingrese email" Keyboard="Email" />

                <Button x:Name="btnagregar" Text="Salvar" Clicked="btnagregar_Clicked" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>